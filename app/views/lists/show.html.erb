<h2><%= @list.name %></h2>
<ul>
	<% @list.items.each do |item| %>
		<li>
			<%= check_box_tag 'completed', item.id, item.completed? %>  
			<%= link_to item.title, list_item_path(@list, item)%></li> 
	<% end %>
</ul>
<br />
<br />
<p>
	<%= link_to "Edit list", edit_list_path(@list) %> | 
	<%= link_to "Delete list", list_path(@list), :confirm => 'Are you sure you want to delete? This action will also delete all items in this list.', :method => 'DELETE' %> | 
	<%= link_to "Add an item", new_list_item_path(@list) %> 
</p>
<p><%= link_to "Back to lists", :root %></p>

